{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es5",
    "outDir": "lib",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "types": ["styled-components"],
    "typeRoots": ["src/.types", "node_modules/@types"]
  },
  "include": ["src/.types/**/*.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.tsx", "src"],
  "exclude": ["node_modules", "lib", "src**/*.stories.tsx", "src/**/*.test.tsx"]
}
